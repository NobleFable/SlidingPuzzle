<UserControl x:Class="SlidingPuzzle.GameScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlidingPuzzle"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="263">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="58"/>
            <RowDefinition Height="259" />
            <RowDefinition Height="55" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Grid.RowSpan="4" Fill="Green" />
        <local:GameScreenHeader x:Name="UsrCntrlGameScreenHeader" Grid.Row="0" />
        <local:PuzzleBox x:Name="UsrCntrlPuzzleBox" Grid.Row="1" />
        <local:GameScreenFooter x:Name="UsrCntrlGameScreenFooter" Grid.Row="2" />
    </Grid>
</UserControl>
