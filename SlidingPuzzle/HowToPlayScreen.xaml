<UserControl x:Class="SlidingPuzzle.HowToPlayScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlidingPuzzle"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="263">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="320" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="4" Fill="Orange" />
        <Image Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Source="Resources/Present_Picture.png" Stretch="Fill"/>
        <Image x:Name="ImgReturn" Grid.Column="1" Grid.Row="2" Source="Resources/Return_Button_Base.png" Stretch="Fill" MouseEnter="ImgReturn_MouseEnter" MouseLeave="ImgReturn_MouseLeave" />
    </Grid>
</UserControl>
